<div class="page-header">
  <h1>
    Comments
    <a href="/comments/new" class="btn btn-lg btn-success">New Comment</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Improvement plan</th>
        <th>Goal</th>
        <th>Actions</th>
      </tr>

      <% @comments.each do |comment| %>
      <tr>
        <td>
          <% if comment.improvement_plan.present? %>
            <a href="/improvement_plans/<%= comment.improvement_plan.id %>">
              <%= comment.improvement_plan.user_id %>
            </a>
          <% end %>
        </td>
        <td>
          <% if comment.goal.present? %>
            <a href="/goals/<%= comment.goal.id %>">
              <%= comment.goal.improvement_plan_id %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/comments/<%= comment.id %>" class="btn btn-primary">Show</a>
          <a href="/comments/<%= comment.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_comment/<%= comment.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @comments, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
